version: "3.7"

services:
{{range .Pollers}}
  {{ .ServiceName }}:
    image: {{ .Image }}
    container_name: {{ .ContainerName }}
    restart: unless-stopped
    {{- if .ShowPorts}}
    {{ if .Port }}ports:
      - {{ .Port }}:{{ .Port }}
    {{- end}}
    {{- end}}
    command: '--poller {{ .PollerName }} {{if .Port }}--promPort {{ .Port }} {{ end }}
    {{- if ne .LogLevel 2 }}--loglevel {{ .LogLevel }} {{ end}}--config /opt/harvest.yml'
    volumes:
      - type: bind
        source: {{ .TemplateDir }}
        target: /opt/harvest/conf
      - type: bind
        source: {{ .ConfigFile }}
        target: /opt/harvest.yml
    {{- if .IsFull}}
    networks:
      - backend
    {{- end}}
{{end}}
